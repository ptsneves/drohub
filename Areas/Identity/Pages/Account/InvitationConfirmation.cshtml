@page
@model InvitationConfirmation

@{
    Layout = "~/Areas/Identity/Pages/Account/_Layout.cshtml";
}
<h4>@ViewData["Title"]</h4>

<div class="login-box-drohub">
    <div class="drohub-logo">
        <img alt="DROHUB" src="/images/logo/drohub-small.png"/>
    </div> <!-- /.login-logo -->
    <div>
        Create Account
    </div>
    <div class="login-box-body-drohub">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Input.user_email" value="@Model.UserEmail"/>
            <input type="hidden" asp-for="Input.verification_code" value="@Model.VerificationCode"/>
            <div class="form-group content-centered has-feedback">
                <input asp-for="Input.new_password" placeholder="New Password" class="form-control-drohub" />
                <span asp-validation-for="Input.new_password" class="text-danger"></span>
            </div>
            <div class="form-group content-centered has-feedback">
                <input asp-for="Input.confirmed_new_password" placeholder="New Password confirmation"
                class="form-control-drohub" />
                <span asp-validation-for="Input.confirmed_new_password" class="text-danger"></span>
            </div>
            <div class="form-group content-centered has-feedback">
                <button type="submit" class="btn login-submit-btn-drohub">Create</button>
            </div>
        </form>
    </div>

</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

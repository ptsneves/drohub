@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-7">
        <p>Your account contains personal data that you have given us.<br />This page allows you to download or delete that data.</p>
        <div class="alert alert-warning" role="alert">
            <span class="glyphicon glyphicon-warning-sign"></span>
            Deleting this data will permanently remove your account, and this cannot be recovered.
        </div>
        <form asp-page="DownloadPersonalData" method="post" class="form-group">
            <button class="btn btn-info" type="submit" title="Download your personal data">Download</button>
            <a asp-page="DeletePersonalData" class="btn btn-danger" title="Delete your personal data">Delete</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
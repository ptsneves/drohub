@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.DeletePersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="col-md-7">
    <p>Are you sure you want to delete all your personal data and close your account?</p>
    <div class="alert alert-danger" role="alert">
        <span class="glyphicon glyphicon-warning-sign"></span>
        Deleting this data will permanently remove your account, and <strong>this cannot be recovered!</strong>
    </div>
    <div>
        <form id="delete-user" method="post" class="form-group">
            <div asp-validation-summary="All" class="text-danger"></div>
            @if (Model.RequirePassword)
            {
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            }
            <button class="btn btn-danger" type="submit" title="Delete all your personal data and close your account">Ok, delete data and close my account!</button>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
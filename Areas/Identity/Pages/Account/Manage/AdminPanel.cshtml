
@page
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims
@using Microsoft.AspNetCore.Identity;
@inject IAuthorizationService AuthorizationService
@inject IUserClaimsPrincipalFactory<DroHubUser> UserClaimsPrincipalFactory
@model RegisterModel

 <div class="bs-example" data-example-id="hoverable-table">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>User Name</th>
          <th>Policies</th>
          <th>Last Login</th>
          <th>Devices Serial Numbers</th>
          <th>Lock Out</th>
        </tr>
      </thead>
      <tbody>
        @foreach(var user in @Model.Users) {
        <tr>
          <td>@user.UserName</td>
          <td>
          @foreach(var policy in AuthorizationOptionsExtension.Policies) {
            var s = await UserClaimsPrincipalFactory.CreateAsync(user);
            @if ((await AuthorizationService.AuthorizeAsync(s, null, policy.Key)).Succeeded)
            {
                <p>@policy.Key</p>
            }
          }
          </td>
          <td>@user.LastLogin</td>
          <td>
          @foreach(var ud in user.UserDevices) {
              <p>@ud.Device.SerialNumber</p>
          }
          </td>
          <td>
            @(user.LockoutEnd == null ? "Not locked" : (string)user.LockoutEnd.ToString())
          </td>
        </tr>
        }
      </tbody>
    </table>
  </div><!-- /example -->
<div class="register-box">
    <div class="register-logo">
        <a asp-area="" asp-controller="Home" asp-action="Index"><b>D</b>ro<b>H</b>ub</a>
    </div> <!-- /.login-logo -->
    <div class="register-box-body">
        <p class="register-box-msg">Create a new account</p>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group has-feedback">
                <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group has-feedback">
                <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group has-feedback">
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Retype Password" />
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <label>
                            <input type="checkbox"> I agree to the <a href="#">terms</a>
                        </label>
                    </div>
                </div>
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Register</button>
                </div>
            </div>
        </form>

        <a asp-page="./Login">Go to Login</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

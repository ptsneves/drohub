@model DroHub.Areas.DHub.Controllers.DevicesController.DeleteDeviceConfirmedModel
@{
    ViewData["Title"] = "Delete";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Devices
        <small>Delete</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-camera"></i> Devices</a></li>
        <li class="active">Delete</li>
    </ol>
</section>
<!-- /Content Header (Page header) -->
<!-- Main content -->
<section class="content">
    <div class="row">
            <div class="col-sm-6">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <div class="callout callout-danger" style="margin-bottom: 0!important;">
                            <h4><i class="fa fa-ban"></i> Are you sure?</h4>
                            Are you sure you want to delete this device?
                        </div>
                    </div>
                    <form asp-action="Delete">
                        <div class="box-body">
                            <div asp-validation-summary="All" class="text-danger content-centered"></div>
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.Device.Name)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Device.Name)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.Device.SerialNumber)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Device.SerialNumber)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.Device.CreationDate)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Device.CreationDate)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.DeleteFlightSessions)
                                </dt>
                                <dd>
                                    <input type="checkbox" asp-for="DeleteFlightSessions"/>
                                </dd>
                            </dl>
                        </div>
                        <div class="box-footer text-right">
                            <input type="hidden" asp-for="Device.Id" />

                            <a asp-area="DHub" asp-controller="Devices" asp-action="" class="btn btn-warning" title="Back to devices list">Back to list</a>
                            <input type="submit" value="Delete" class="btn btn-danger" title="Delete this device" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
</section>
<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <div class="user-panel">
                <a class="pull-left image" asp-area="Identity" asp-page="/Account/Manage/Index" title="Profile" class="btn btn-link" >
                    <img src="~/AdminLTE/dist/img/user2-160x160.jpg" style="max-width:45px" class="img-circle" alt="User Image">
                </a>
                <div class="pull-right info">
                    <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Profile" class="btn btn-link" >
                        <p>@User.Identity.Name</p>
                    </a>
                </div>
        </div>
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu tree" data-widget="tree">
            <li class="header">MAIN NAVIGATION</li>
            <li class="treeview">
                    <a href="#">
                        <i class="fa fa-camera"></i>
                        <span>Devices</span>
                        <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                    <ul class="treeview-menu" id="devices-list">
                        <li>
                            <a data-toggle="ajax-modal" href="#modal-add-device" data-target="#modal-add-device" data-url='@Url.Action("Create", "Devices", new {Area = "DHub"})'>
                                <i class="fa fa-plus"></i>
                                Associate Device
                            </a>
                        </li>
                    </ul>
                </li>


            <li>
                <a asp-action="Dashboard" asp-area="DHub" asp-controller="DeviceRepository">
                    <i class="fa fa-map"></i> <span>Dashboard</span>
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="Home" asp-action="Contact">
                    <i class="fa fa-phone"></i> <span>Contact</span>
                </a>
            </li>
        </ul>
    </section>
</aside>
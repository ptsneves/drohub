{
  "ConnectionStrings": {
    "DroHubConnection": "Server=db;Database=master;MultipleActiveResultSets=true;User Id=sa;Password=#ABc123456789"
  },
  "AllowedHosts": "*",
  "RepositoriesConfiguration": {
    "Dropbox": {
      "APIKey": "@@ENV@@",
      "APISecret": "@@ENV@@",
      "AppName": "DroHub",
      "AuthRedirectUri": "https://drohub.airborneprojects.com/DHub/DeviceRepository/Auth"
    }
  },
  "DeviceMicroServiceOptions": {
    "Address": "drone",
    "Port": 50051
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override" : {
          "Microsoft" : "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Server=db;Database=master;MultipleActiveResultSets=true;User Id=sa;Password=#ABc123456789;",
          "tableName": "Logs",
          "autoCreateSqlTable": true,
          "restrictedToMinimumLevel" : "Information",
          "columnOptionsSection": {
            "removeStandardColumns": [
              "MessageTemplate",
              "Properties"
            ],
            "customColumns": [
              {
                "DataType": "varchar",
                "ColumnName": "EventId",
                "DataLength": "100",
                "AllowNull": true
              },
              {
                "ColumnName": "SourceContext",
                "DataType": "varchar",
                "DataLength": "100",
                "AllowNull": false
              }
            ]
          }
        }
      },
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel" : "Debug",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message,30:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  }
}
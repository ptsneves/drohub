<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:fontFamily="@font/noto_sans"
                                                   tools:context=".MainActivity"
                                                   android:paddingStart="30dp"
                                                   android:paddingEnd="30dp">
    <ImageView
            android:layout_width="336dp"
            android:layout_height="83dp" app:srcCompat="@drawable/drohub_logo"
            android:id="@+id/logo"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="176dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:id="@+id/login_status"
            android:layout_width="245dp"
            android:layout_height="46dp"
            android:gravity="center"
            android:visibility="invisible"
            android:text="Should not be visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="108dp"
            android:fontFamily="@font/noto_sans"/>
    <Button
            android:id="@+id/login_button"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:onClick="tryPilotLogin"
            android:text="Log In"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password_input"
            android:layout_marginTop="36dp" app:layout_constraintBottom_toTopOf="@+id/login_status"
            android:textColor="@android:color/white" android:background="#1099FF" android:textSize="24sp"
            android:fontFamily="@font/noto_sans"/>
    <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password_input"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:hint="Password"
            android:inputType="textPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/email_input"
            android:textColorHint="#1099ff" android:backgroundTint="#BCBCBC" android:fontFamily="@font/noto_sans"/>
    <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email_input"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            android:layout_marginTop="124dp" app:layout_constraintHorizontal_bias="0.733"
            android:textColorHint="#1099ff" android:backgroundTint="#BCBCBC" android:fontFamily="@font/noto_sans">
        <requestFocus/>
    </com.google.android.material.textfield.TextInputEditText>
    <TextView
            android:text='Do not have an account yet?\n Subscribe in http://drohub.xyz'
            android:layout_width="416dp"
            android:autoLink="web"
            android:layout_height="96dp"
            android:id="@+id/subscribe_hint" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="89dp"
            app:layout_constraintTop_toBottomOf="@+id/login_status" android:fontFamily="@font/noto_sans"
            android:gravity="center_horizontal" android:textSize="18sp" app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintVertical_bias="0.727" android:textColorLink="#2196F3"/>
    <androidx.constraintlayout.widget.Group android:layout_width="wrap_content" android:layout_height="wrap_content"
                                            android:id="@+id/login_group"
                                            app:constraint_referenced_ids="email_input,login_button,password_input,subscribe_hint"/>


</androidx.constraintlayout.widget.ConstraintLayout>
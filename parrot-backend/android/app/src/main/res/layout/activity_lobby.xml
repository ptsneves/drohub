<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LobbyActivity">

    <fragment
        android:id="@+id/status_container"
        android:name="com.drohub.Fragments.StatusBarFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    >
    </fragment>
    <androidx.core.widget.NestedScrollView android:layout_width="match_parent"
                                           android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                    android:id="@+id/flight_area_container"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true"
            >
                <fragment
                        android:name="com.drohub.Fragments.SubscriptionInfoFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                </fragment>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/fly_container"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true"
            >
                <fragment
                        android:name="com.drohub.Fragments.FlyCardFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                </fragment>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>